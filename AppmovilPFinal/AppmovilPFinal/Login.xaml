<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppmovilPFinal.Login">

    <!-- Login Section -->
    <StackLayout x:Name="LoginSection" Padding="20" VerticalOptions="Center">
        <Entry x:Name="UsernameEntry" Placeholder="Correo"  />
        <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True"  />
        <Button Text="Iniciar Sesión" x:Name="Ingresar" Clicked="OnLoginButtonClicked" />

        <Label Text="¿No tiene cuenta? Regístrese aquí" FontSize="Small" TextColor="Blue" 
                HorizontalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnRegisterLabelTapped" />
            </Label.GestureRecognizers>
        </Label>
    </StackLayout>
</ContentPage>