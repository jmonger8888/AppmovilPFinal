<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppmovilPFinal.Registro">
    <ContentPage.Content>
        <StackLayout x:Name="LoginSection" Padding="20" VerticalOptions="Center">
            <Entry x:Name="UsernameEntry" Placeholder="Correo"  />
            <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True"  />
            <Button Text="Registrarse" x:Name="btnRegistro" Clicked="OnRegisterButtonClicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>